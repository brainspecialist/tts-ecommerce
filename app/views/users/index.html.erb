<h1>Users</h1>
<table class='table'>
  <thead>
    <tr>
  	  <th>Email</th>
  	  <th>Actions</th>
  	</tr>
  </thead>
  <tbody>
  	<% @users.each do |user| %>
  	  <tr>
  	    <td><% user.email %></td>
  	  	<td>
  	  	  <% form_tag users_update_path do %>
  	  	    <%= hidden_field_tag :user_id, user.id %>
  	  	    <%= select_tag :role, options_for_select(['admin','guest']) %>
  	  	    <%= submit_tag 'Change Role', class: 'btn btn-primary' %>
  	  	  <% end %>
  	  	</td>
  	  </tr>
  	<% end %>
  </tbody>
</table>
